<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_root"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="64dp"
        android:background="@color/colorOnLightStroke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/list_number"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:fontFamily="@font/poppins"
            android:textColor="@color/colorOnLightSecondary"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

        <TextView
            android:id="@+id/list_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Chapter title"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorOnLightPrimary"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

    </LinearLayout>

</FrameLayout>