<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:paddingStart="?attr/actionBarSize"
        android:paddingEnd="?attr/actionBarSize"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/onboarding_001_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_001_title"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/colorOnLightPrimary"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>

        <TextView
            android:id="@+id/onboarding_001_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_001_desc"
            android:fontFamily="@font/poppins"
            android:textColor="@color/colorOnLightSecondary"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>